extends layout

block content 
  if locals.user && locals.user.isAdmin
      div(class="messages-display-wrapper")
        h1 Are you sure you want to delete this message? 
        div(class="message" style="border: 1px solid")
          p #[strong Body:] #{message.body}
          p #[strong Author:] #{message.author_username}
        form(action="" method="POST" style="flex-direction: row; justify-content: center;")
          input(type="hidden" name="message_id" value=message._id)
          button(type="submit" class="btn") Yes
          a(href="/")
            button(type="button" class="btn") No
  else 
    h1 Permission denied

